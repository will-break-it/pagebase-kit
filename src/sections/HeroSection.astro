---
/**
 * HeroSection - Hero with practitioner photo and CTA
 */
import type { ClientConfig, ClientContent } from '../content';

interface Props {
  config: ClientConfig;
  content: ClientContent;
}

const { config, content } = Astro.props;
---

<section class="py-12 sm:py-20 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-5xl mx-auto">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12 mb-16">
      <!-- Photo -->
      {config.practitioner?.photo && (
        <div class="flex-shrink-0 flex flex-col items-center">
          <div class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 relative">
            <div class="absolute inset-0 bg-primary/20 rounded-full blur-xl scale-110"></div>
            <div class="relative w-full h-full rounded-full shadow-lg ring-4 ring-white overflow-hidden">
              <img
                src={`/${config.practitioner.photo.replace('assets/', '')}`}
                alt={`${config.practitioner.name} - ${config.practitioner.title}`}
                class="w-full h-full object-cover object-top"
                loading="eager"
              />
            </div>
          </div>
        </div>
      )}

      <!-- Text -->
      <div class="text-center md:text-left">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-text leading-tight mb-4">
          {content.hero.title}
        </h1>
        <p class="text-lg sm:text-xl text-text-light max-w-xl mb-6">
          {content.hero.subtitle}
        </p>
        {content.hero.cta && (
          <div class="inline-flex items-center gap-3">
            <a
              href="#booking"
              class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-lg text-base font-semibold hover:bg-primary-dark transition-colors shadow-lg hover:shadow-xl"
            >
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
              </svg>
              {content.hero.cta}
            </a>
            {content.hero.ctaWith && (
              <span class="text-text-light font-medium">{content.hero.ctaWith}</span>
            )}
          </div>
        )}
      </div>
    </div>

    <!-- Approach Cards -->
    {content.approach && (
      <>
        <div class="text-center mb-10">
          <p class="text-lg text-text-light max-w-2xl mx-auto">{content.approach.subtitle}</p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 md:gap-10">
          {content.approach.cards.map((card, index) => (
            <div class="text-center p-4">
              <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-5">
                {index === 0 && (
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                  </svg>
                )}
                {index === 1 && (
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                  </svg>
                )}
                {index === 2 && (
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-semibold mb-3">{card.title}</h3>
              <p class="text-text-light">{card.description}</p>
            </div>
          ))}
        </div>
      </>
    )}
  </div>
</section>
