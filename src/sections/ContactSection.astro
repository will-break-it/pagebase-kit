---
/**
 * ContactSection - Contact cards with address, hours, email
 */
import type { ClientConfig, ClientContent } from '../content';

interface Props {
  config: ClientConfig;
  content: ClientContent;
}

const { config, content } = Astro.props;
---

<section id="contact" class="py-16 sm:py-20 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl sm:text-4xl font-bold text-center mb-12">{content.contact.title}</h2>

    <div class="grid md:grid-cols-3 gap-4 md:gap-6 max-w-4xl mx-auto">
      <!-- Address -->
      <a
        href={config.contact.mapsLink}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-4 bg-primary/10 rounded-xl px-5 py-4 hover:bg-primary/15 hover:shadow-md transition-all group"
      >
        <div class="w-11 h-11 bg-primary text-white rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-105 transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
        </div>
        <div class="min-w-0">
          <p class="font-semibold text-text text-sm">{config.contact.address.street}, {config.contact.address.zip} {config.contact.address.city}</p>
          <p class="text-xs text-primary">{content.contact.directionsLabel} â†’</p>
        </div>
      </a>

      <!-- Hours -->
      {content.contact.hours && (
        <div class="flex items-center gap-4 bg-primary/10 rounded-xl px-5 py-4">
          <div class="w-11 h-11 bg-primary text-white rounded-xl flex items-center justify-center flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
          </div>
          <div class="min-w-0">
            <p class="font-semibold text-text text-sm">{content.contact.hours}</p>
            <p class="text-xs text-text-light">{content.contact.hoursLabel}</p>
          </div>
        </div>
      )}

      <!-- Email -->
      <a
        href={`mailto:${config.contact.email}`}
        class="flex items-center gap-4 bg-primary/10 rounded-xl px-5 py-4 hover:bg-primary/15 hover:shadow-md transition-all group"
      >
        <div class="w-11 h-11 bg-primary text-white rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-105 transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
          </svg>
        </div>
        <div class="min-w-0">
          <p class="font-semibold text-text text-sm truncate">{config.contact.email}</p>
          <p class="text-xs text-text-light">{content.contact.emailLabel}</p>
        </div>
      </a>
    </div>
  </div>
</section>
