---
/**
 * FAQSection - Expandable FAQ items
 */
import type { ClientContent } from '../content';

interface Props {
  content: ClientContent;
}

const { content } = Astro.props;
---

{content.faq && (
  <section id="faq" class="py-16 sm:py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">{content.faq.title}</h2>

      <div class="space-y-4">
        {content.faq.items.map((item) => (
          <details class="group bg-white rounded-lg shadow-md">
            <summary class="flex items-center justify-between cursor-pointer p-6 font-semibold text-lg">
              {item.question}
              <span class="ml-4 text-primary group-open:rotate-180 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                </svg>
              </span>
            </summary>
            <div class="px-6 pb-6 text-text-light">
              <p set:html={item.answer} />
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>
